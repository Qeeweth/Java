<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <TextArea fx:id="userListTextArea" editable="false" prefHeight="300" prefWidth="125"
              style="-fx-border-width: 10px; -fx-background-color: white;"/>
    <VBox alignment="center" prefHeight="300" prefWidth="275">
        <children>
            <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="400">
            </TextArea>
            <HBox prefHeight="25" prefWidth="300">
                <children>
                    <TextField fx:id="textField" onAction="#send" prefWidth="225"/>
                    <Button mnemonicParsing="false" onAction="#send" prefWidth="125" style="-fx-background-color: white;"
                            text="Отправить" textAlignment="CENTER" textFill="BLUE" underline="true"/>
                </children>
            </HBox>
            <Button fx:id="connectBtn" onAction="#connect" prefHeight="25" prefWidth="Infinity" text="Подключиться"/>
        </children>
    </VBox>
</HBox>